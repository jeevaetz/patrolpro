<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <listener>
        <description>Initializes our application backend.</description>
        <listener-class>com.patrolpro.init.PatrolProInit</listener-class>
    </listener>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Production</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>vader</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>server</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ThumbnailServlet</servlet-name>
        <servlet-class>com.patrolpro.servlet.ThumbnailServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>PrintIndividualIncidentReportServlet</servlet-name>
        <servlet-class>com.patrolpro.reports.PrintIndividualIncidentReportServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GenerateEquipmentFileServlet</servlet-name>
        <servlet-class>com.patrolpro.servlet.GenerateEquipmentFileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GenerateEmployeeFileServlet</servlet-name>
        <servlet-class>com.patrolpro.servlet.GenerateEmployeeFileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GenerateMarkerIcon</servlet-name>
        <servlet-class>com.patrolpro.servlet.GenerateMarkerIcon</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadJasperReportServlet</servlet-name>
        <servlet-class>com.patrolpro.reports.DownloadJasperReportServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadFileServlet</servlet-name>
        <servlet-class>com.patrolpro.servlet.UploadFileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadJasperReportServlet</servlet-name>
        <servlet-class>com.patrolpro.servlet.UploadJasperReportServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrintMobileFormServlet</servlet-name>
        <servlet-class>com.patrolpro.reports.PrintMobileFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadPostOrderServlet</servlet-name>
        <servlet-class>com.patrolpro.servlet.UploadPostOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadDeviceCountsServlet</servlet-name>
        <servlet-class>com.patrolpro.servlet.LoadDeviceCountsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadTotalReportUsageServlet</servlet-name>
        <servlet-class>com.patrolpro.servlet.LoadTotalReportUsageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadReportUsageBreakdownServlet</servlet-name>
        <servlet-class>com.patrolpro.servlet.LoadReportUsageBreakdownServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadEmployeeReportUsageBreakdownServlet</servlet-name>
        <servlet-class>com.patrolpro.servlet.LoadEmployeeReportUsageBreakdownServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ThumbnailServlet</servlet-name>
        <url-pattern>/thumbs/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrintIndividualIncidentReportServlet</servlet-name>
        <url-pattern>/PrintIndividualIncidentReportServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenerateEquipmentFileServlet</servlet-name>
        <url-pattern>/GenerateEquipmentFileServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenerateEmployeeFileServlet</servlet-name>
        <url-pattern>/GenerateEmployeeFileServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenerateMarkerIcon</servlet-name>
        <url-pattern>/GenerateMarkerIcon</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadJasperReportServlet</servlet-name>
        <url-pattern>/DownloadJasperReportServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadFileServlet</servlet-name>
        <url-pattern>/UploadFileServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadJasperReportServlet</servlet-name>
        <url-pattern>/UploadJasperReportServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrintMobileFormServlet</servlet-name>
        <url-pattern>/PrintMobileFormServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadPostOrderServlet</servlet-name>
        <url-pattern>/UploadPostOrderServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadTotalReportUsageServlet</servlet-name>
        <url-pattern>/LoadTotalReportUsageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadDeviceCountsServlet</servlet-name>
        <url-pattern>/LoadDeviceCountsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadReportUsageBreakdownServlet</servlet-name>
        <url-pattern>/LoadReportUsageBreakdownServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadEmployeeReportUsageBreakdownServlet</servlet-name>
        <url-pattern>/LoadEmployeeReportUsageBreakdownServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            240
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <mime-mapping>
        <extension>png</extension>
        <mime-type>image/png</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>jpeg</extension>
        <mime-type>image/jpeg</mime-type>
    </mime-mapping>
    <error-page>
        <exception-type>org.jboss.weld.context.NonexistentConversationException</exception-type>
        <location>/login.xhtml?error=timeout</location>
    </error-page>
</web-app>
